{
  "name": "oauth-electron-facebook",
  "version": "2.0.0",
  "description": "oauth for facebook inside electron",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "example": "node ./example/example.js",
    "test": "jest",
    "test:dev": "jest --watchAll test/unit",
    "test:int": "jest test/integration",
    "test:cov": "jest --coverage && codecov",
    "push": "yarn test && git push",
    "deploy:major": "yarn version --major",
    "deploy:minor": "yarn version --minor",
    "deploy:patch": "yarn version --patch",
    "deploy:push": "git push && git push --tags",
    "preversion": "yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kanekotic/oauth-electron-facebook.git"
  },
  "keywords": [
    "facebook",
    "oauth",
    "login"
  ],
  "author": "kanekotic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kanekotic/oauth-electron-facebook/issues"
  },
  "devDependencies": {
    "electron": "4.0.5",
    "faker": "4.1.0",
    "jest": "24.1.0",
    "spectron": "5.0.0"
  },
  "dependencies": {
    "codecov": "^3.2.0",
    "oauth": "0.9.15",
    "url": "0.11.0"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*-test.js"
    ],
    "testEnvironment": "node",
    "automock": false
  }
}
